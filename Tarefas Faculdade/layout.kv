<TelaPrincipal>:
    orientation:'vertical'
    ScrollView:
        BoxLayout:
            orientation:'vertical'
            id:box1
            size:self.size
            pos:self.pos
    BoxLayout:
        orientation:'vertical'
        size_hint_y:0.3333
        id:inferior
        TextInput:
            id:input
        Button:
            text:'Adicionar Tarefa'
            on_release:root.inserir()

<Tarefas>:
    size:self.size
    pos:self.pos
    orientation:'vertical'
    Label:
        id:tarefa